[user]
	name = Mark Steve Samson
	email = hello@marksteve.com
[push]
	default = simple
[log]
	decorate = short
[alias]
	pull = pull --ff-only
	l = log --oneline --graph
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/marksteve/.gitignore_global
	editor = env VIM_MINIMAL=1 nvim
[diff]
	tool = icdiff
[difftool]
	prompt = false
[difftool "icdiff"]
	cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
