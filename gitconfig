[push]
	default = simple
	autoSetupRemote = true
[log]
	decorate = short
[alias]
	pull = pull --ff-only
	l = log --oneline --graph
	next = stack next
	prev = stack previous
	reword = stack reword
	amend = stack amend
	sync = stack sync
	run = stack run
[credential]
	helper = cache
	helper = /usr/local/share/gcm-core/git-credential-manager
[core]
	excludesFile = ~/.gitignore
[merge]
	tool = smerge
[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[init]
	defaultBranch = main
[pull]
	ff = only
[credential "https://dev.azure.com"]
	useHttpPath = true
[rebase]
	updateRefs = true
